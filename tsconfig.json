{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.BigInt"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
  }
}
